<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %><br /><br />
  Ingredients:
  <ul>
    <%= f.fields_for :ingredients do |ing| %>
    <li>
      <%= ing.label :name %>
      <%= ing.text_field :name %><br /><br />
    </li>
    <li>
      <%= ing.label :quantity %>
      <%= ing.text_field :quantity %><br /><br />
    </li>
    <% end %>
  </ul>
  <%= f.submit %>
<% end %>
